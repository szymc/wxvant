/* pages/subscribe/subscribe.wxss */
page {
    background: #f5f5f5;
}

.subscribe {
    background-color: #f5f5f5;
}

.subscribeData,
.choosePerson {
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.subscribeData_1,
.choosePerson_1 {
    margin: 15px 15px;
    width: 100%;
    height: 110px;
    background-color: rgb(255, 255, 255);
}

.subscribeData_1_1 {
    width: 50%;
    height: 80px;
    display: inline-block;
    box-sizing: border-box;
    margin-top: 15px;
    text-align: center;
}

.subscribeData_1_2 {
    border-right: 1px solid rgba(131, 139, 141);
}

.subscribeData_1_1 view {
    margin-top: 15px;
}

.choosePerson_1 {
    margin: 0 15px 10px 15px;
    text-align: center;
}

.choosePerson_1 button {
    margin-top: 20px;
}

.choosePerson_1_2 {
    margin-top: 10px;
}
.submit {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 50px;
}
.submit_1 .van-col--12{
    height: 50px;
    background-color: rgb(255, 255, 255);
}
.submit_2 .van-col--12{
    height: 50px;
    background: rgba(113,181,250);
    font-size: 1.2rem;
    font-weight: bolder;
    text-align: center;
    line-height: 50px;
    color: white;
}
