<view class="bc">
    <view class="mianban" wx:for="{{tabledata}}" wx:key="item.id">
    <van-panel title="博物馆入场卷" status="{{item.noid}}" use-footer-slot >
        <view>
            <van-cell-group>
                <van-field
                  value="{{item.name}}"
                  label="姓名"
                  readonly
                  border="{{ false }}"
                />
                <van-field
                  value="{{item.cardid}}"
                  label="证件号"
                  readonly
                  border="{{ false }}"
                />
                <van-field
                  value="{{item.phone}}"
                  label="手机号"
                  readonly
                  border="{{ false }}"
                />
                <van-field
                  value="{{item.visitiedata}}"
                  label="参观日期"
                  readonly
                  border="{{ false }}"
                />
              </van-cell-group>
        </view>
        <view slot="footer" class="btn">
          <van-button size="small" color="#1296DB"  bind:click='gotocheck'>取票</van-button>
          <van-button size="small" bind:click='changetick'>改签</van-button>
          <van-button size="small" type="danger">取消</van-button>
        </view>
    </van-panel>
    </view>
</view>