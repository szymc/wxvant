<view class="bc">
    <image class="image1" src="../../icons/banner2.jpg" mode="aspectFill">
        <cover-view class="logo">
            <cover-view class="flex-item demo-text-3">
                <cover-image src="../../icons/logo.png" mode="aspectFit"></cover-image>
            </cover-view>
        </cover-view>
    </image>
    <view class="navigateto">
    <van-grid clickable column-num="4">
        <van-grid-item
          icon="column"
          link-type="navigateTo"
          url="/pages/reinformation/reinformation"
          text="观众须知"
        />
        <van-grid-item
          icon="comment"
          link-type="navigateTo"
          url="/pages/reinformation/reinformation"
          text="馆内介绍"
        />
        <van-grid-item
          icon="map-marked"
          link-type="navigateTo"
          url="/pages/reinformation/reinformation"
          text="地理位置"
        />
        <van-grid-item
          icon="todo-list"
          link-type="navigateTo"
          url="/pages/reinformation/reinformation"
          text="我的预约"
        />
      </van-grid>
    </view>
    <view class="cell">
        <van-cell title="门票预约" size="large" icon="bars"/>
        <van-cell title="预约参观日期选择" bind:click="onDisplay" is-link value="选择日期"/>
            <van-calendar
            show="{{ show }}"
            min-date="{{ minDate }}"
            max-date="{{ maxDate }}"
            bind:close="onClose" 
            bind:confirm="onConfirm"
            />
        <van-checkbox-group max="{{1}}" value="{{ result }}" bind:change="onChange">
            <van-cell-group>
              <van-cell
                center
                wx:for="{{ list }}"
                wx:key="index"
                title="上午票"
                label="9:00-10:00" 
                value-class="value-class"
                clickable
                data-index="{{ index }}"
                bind:click="toggle"
                value="请选择时间段"
            >
                <van-checkbox
                    slot="right-icon"
                    catch:tap="noop"
                    class="checkboxes-{{ index }}"
                    name="{{ item }}"
                />
              </van-cell>
            </van-cell-group>
          </van-checkbox-group>
    </view>
    <view class="btn">
      <van-button color="#1296DB" size="large" bindtap = 'gotoreinformation'>立即预约</van-button>
    </view>
</view>