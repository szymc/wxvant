<view class="bc">
	<view class="cellcenter">
		<van-cell-group >
			<van-field
			value="{{ expassword }}"
			type="password"
			label="原密码"
			placeholder="请输入原密码"
			required
			border="{{ false }}"
			/>
			<van-field
			value="{{ newpassword }}"
			type="password"
			label="新密码"
			placeholder="请设置新密码"
			required
			border="{{ false }}"
			/>
			<van-field
			value="{{ repassword }}"
			type="password"
			label="新密码"
			placeholder="请再次确定新密码"
			required
			border="{{ false }}"
			/>
		</van-cell-group>
		密码长度为6-20位
		<van-button color="#1296DB" size="large">确定修改</van-button>
	</view>
    
</view>